<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="50dp" android:height="50dp"/>
                    <corners android:radius="5dp" />
                    <solid android:color="#77000000" />
                </shape>
            </item>
            <item android:right="7dp" android:left="7dp" android:top="7dp" android:bottom="7dp" android:drawable="@drawable/ic_settings" />
      </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item android:top="7dp" android:left="7dp" android:right="7dp" android:bottom="7dp" android:drawable="@drawable/ic_settings" />
        </layer-list>
    </item>
</selector>
