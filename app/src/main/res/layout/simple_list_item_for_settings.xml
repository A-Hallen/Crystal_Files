<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/inverse_ripple"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/squareColorChooser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent">

        <CheckBox
            android:id="@+id/settings_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:buttonTint="@color/white"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:text="@string/fondo_por_defecto"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/settings_et_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="10dp"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="@string/fondo" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingVertical="10dp"
            android:visibility="gone"
            tools:progress="20" />

        <TextView
            android:id="@+id/settings_et_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="10dp"
            android:textColor="@color/grayantiquewhite"
            tools:text="wallpapper.png" />


    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/squareColorChooser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:background="@color/green"
        android:visibility="gone"
        tools:visibility="visible"
        app:shapeAppearanceOverlay="@style/circularCorner"
        app:layout_constraintStart_toEndOf="@+id/main_layout"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayantiquewhite" />

</androidx.constraintlayout.widget.ConstraintLayout>

