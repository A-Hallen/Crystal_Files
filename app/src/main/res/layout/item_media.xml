<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="130dp"
    android:layout_width="130dp"
    android:clickable="true"
    android:focusable="true"
    android:padding="5dp"
    android:layout_gravity="center"
    android:id="@+id/layout_recicler_grid"
    android:layout_weight="1"
    style="@style/black_style"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_galery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="end|center_vertical"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        tools:src="@drawable/wallpaper_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundCorner" />

    <TextView
        android:id="@+id/galeryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:background="@drawable/gallery_name_mark"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible"
        android:id="@+id/galeryCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="clip_vertical|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>