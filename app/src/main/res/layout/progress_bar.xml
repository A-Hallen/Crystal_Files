<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.skydoves.progressview.ProgressView
            android:visibility="invisible"
            android:id="@+id/progressView"
            android:layout_width="35dp"
            android:layout_height="150dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            app:progressView_borderWidth="1dp"
            app:progressView_orientation="vertical"
            app:progressView_borderColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:progressView_autoAnimate="true"
            app:progressView_colorBackground="@color/transparente"
            app:progressView_colorGradientEnd="@color/redBlood"
            app:progressView_colorGradientStart="@color/brown"
            app:progressView_colorProgress="@color/purple_500"
            app:progressView_progressFromPrevious="true"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/black"
            app:progressView_labelSize="13sp"
            app:progressView_labelSpace="10dp"
            app:progressView_labelText=""
            app:progressView_labelTypeface="bold"
            app:progressView_max="100"
            app:progressView_min="0"
            app:progressView_padding="1.5dp"
            app:progressView_radius="12dp"
            app:progressView_highlighting="true"
            app:progressView_highlightAlpha="0.8"
            app:progressView_highlightColor="@color/redBlood"
            app:progressView_highlightWidth="1.5dp"
            />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>