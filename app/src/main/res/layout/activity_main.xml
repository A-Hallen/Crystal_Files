<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_default"
    android:id="@+id/drawer_layout"
    tools:context=".view.MainActivity"
    tools:openDrawer="start">

    <include
        layout="@layout/select_all_top_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        layout="@layout/recicler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <include
        android:visibility="invisible"
        layout="@layout/galery_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        layout="@layout/select_botom_nav"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <include
        layout="@layout/paste_bar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/navigation_layout"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        app:menu="@menu/select_nav_items_menu"
        style="@style/black_style">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.mmin18.widget.RealtimeBlurView
                android:id="@+id/realtimeBlurView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:realtimeBlurRadius="15dp"
                app:realtimeOverlayColor="@color/mediumDarkGlass"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ExpandableListView
                android:id="@+id/expandableList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/antiquewhite"
                android:background="@drawable/bg_dialog_view_white"
                style="@style/black_style"
                android:dividerHeight="0.5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>